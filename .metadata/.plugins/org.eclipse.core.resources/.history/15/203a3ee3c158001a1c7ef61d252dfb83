	static String replaceToSGA(String text) {
		text = text.replace("a", "·îë");
		text = text.replace("b", " ñ");
		text = text.replace("c", "·ìµ");
		text = text.replace("d", "‚Ü∏");
		text = text.replace("e", "·í∑");
		text = text.replace("f", "‚éì");
		text = text.replace("g", "‚ä£");
		text = text.replace("h", "‚çë");
		text = text.replace("i", "‚ïé");
		text = text.replace("j", "‚ãÆ");
		text = text.replace("k", "Íñå");
		text = text.replace("l", "Íñé");
		text = text.replace("m", "·í≤");
		text = text.replace("n", "„É™");
		text = text.replace("o", "ùôπ");
		text = text.replace("p", "!¬°");
		text = text.replace("q", "·ëë");
		text = text.replace("r", "‚à∑");
		text = text.replace("s", "·ì≠");
		text = text.replace("t", "‚Ñ∏");
		text = text.replace("u", "‚öç");
		text = text.replace("v", "‚çä");
		text = text.replace("w", "‚à¥");
		text = text.replace("x", "/");
		text = text.replace("y", "||");
		text = text.replace("z", "‚®Ö");
		return text;
	}

	static String replaceToNA(String text) {
		text = text.replace("·îë", "a");
		text = text.replace(" ñ", "b");
		text = text.replace("·ìµ", "c");
		text = text.replace("‚Ü∏", "d");
		text = text.replace("·í∑", "e");
		text = text.replace("‚éì", "f");
		text = text.replace("‚ä£", "g");
		text = text.replace("‚çë", "h");
		text = text.replace("‚ïé", "i");
		text = text.replace("‚ãÆ", "j");
		text = text.replace("Íñå", "k");
		text = text.replace("Íñé", "l");
		text = text.replace("·í≤", "m");
		text = text.replace("„É™", "n");
		text = text.replace("ùôπ", "o");
		text = text.replace("!¬°", "p");
		text = text.replace("·ëë", "q");
		text = text.replace("‚à∑", "r");
		text = text.replace("·ì≠", "s");
		text = text.replace("‚Ñ∏", "t");
		text = text.replace("‚öç", "u");
		text = text.replace("‚çä", "v");
		text = text.replace("‚à¥", "w");
		text = text.replace("/", "x");
		text = text.replace("||", "y");
		text = text.replace("‚®Ö", "z");
		return text;
	}

	static boolean CheckSGA(String buchstabe) {
		for (int i = 0; i < SGA.size(); i++) {
			if (SGA.get(i).equalsIgnoreCase(buchstabe)) {
				return true;
			}
		}
		return false;
	}

	static boolean CheckNA(String buchstabe) {
		for (int i = 0; i < NA.size(); i++) {
			if (NA.get(i).equalsIgnoreCase(buchstabe)) {
				return true;
			}
		}
		return false;
	}

}
